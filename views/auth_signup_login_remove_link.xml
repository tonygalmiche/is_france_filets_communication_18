<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Supprime le lien d'inscription et reset password -->
    <template id="auth_signup.login" inherit_id="web.login">
        <!-- On ne met rien du tout, on n'ajoute pas les liens -->
    </template>

    <!-- Supprimer le lien pour se connecter eu superuser -->
    <template id="remove_superuser_login_button" inherit_id="web.login">
        <xpath expr="//button[@name='redirect']" position="replace"/>
    </template>
  
    <!-- Désactvie 'Généré par Odoo' -->
    <template id="login_layout" inherit_id="web.login_layout">
        <xpath expr="//div[hasclass('border-top')]" position="replace"/>
    </template>
</odoo>