        <!-- mailing.contact -->
        <record id="is_mailing_contact_view_form" model="ir.ui.view">
            <field name="name">is_mailing_contact_view_form</field>
            <field name="model">mailing.contact</field>
            <field name="inherit_id" ref="mass_mailing.mailing_contact_view_form"/>
            <field name="arch" type="xml">
                <field name="title_id" position="replace">
                    <field name="is_code_ape"/>
                    <field name="is_ville"/>
                    <field name="is_code_postal"/>
                    <field name="is_rue"/>
                    <field name="is_region_id"/>
                    <field name="is_telephone"/>
                    <field name="is_fax"/>
                    <field name="is_site_internet"/>
                    <field name="is_segment_id"/>
                </field>
                <field name="country_id" position="replace"/>
                <field name="message_bounce" position="after">
                    <field name="active"/>
                </field>
            </field>
        </record>.
        <record id="is_mailing_contact_view_tree" model="ir.ui.view">
            <field name="name">is_mailing_contact_view_tree</field>
            <field name="model">mailing.contact</field>
            <field name="inherit_id" ref="mass_mailing.mailing_contact_view_tree"/>
            <field name="arch" type="xml">
                <field name="email" position="after">
                    <field name="is_ville"       optional="show"/>
                    <field name="is_code_postal" optional="show"/>
                    <field name="is_region_id"   optional="show"/>
                    <field name="is_telephone"   optional="show"/>
                    <field name="is_segment_id"  optional="show"/>
                </field>
            </field>
        </record>
        <record id="is_mailing_contact_view_search" model="ir.ui.view">
            <field name="name">is_mailing_contact_view_search</field>
            <field name="model">mailing.contact</field>
            <field name="inherit_id" ref="mass_mailing.mailing_contact_view_search"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="email"/>
                    <field name="is_code_ape"/>
                    <field name="is_ville"/>
                    <field name="is_code_postal"/>
                    <field name="is_rue"/>
                    <field name="is_region_id"/>
                    <field name="is_site_internet"/>
                    <field name="is_segment_id"/>
                </field>
            </field>
        </record>
        <record id="add_last_mailing_list_action" model="ir.actions.server">
            <field name="name">Ajouter à la dernière liste de diffusion</field>
            <field name="model_id" ref="model_mailing_contact"/>
            <field name="binding_model_id" ref="mass_mailing.model_mailing_contact"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = model.add_last_mailing_list_action()
            </field>
        </record>

</odoo>
